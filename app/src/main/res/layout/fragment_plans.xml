<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainFragment">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/pink_rounded_bg"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/introText">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:fontFamily="@string/wizard_boxa_font"
            android:textAllCaps="true"
            android:textSize="@dimen/wizard_textSize"
            android:text="@string/permium_boxa_text"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tagsRecycler"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/planDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/introText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/planDetails_height"
        android:id="@+id/planDetails"
        android:gravity="center"
        android:visibility="invisible"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <net.rimoto.android.views.CircleProgressView
            android:layout_width="@dimen/planDetails_height"
            android:layout_height="@dimen/planDetails_height"
            android:id="@+id/percentage"
            app:colorBase="@color/pink"
            app:colorBold="@color/orange"
            app:strokeBase="5"
            app:strokeBold="15"
            android:fontFamily="@string/wizard_boxa_font"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/pink"
            tools:ignore="UnusedAttribute" />
        <TextView
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/planDetails_daysLeft"
            android:textColor="@color/pink"
            android:fontFamily="@string/wizard_boxa_font"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/percentage"
            tools:ignore="UnusedAttribute" />
    </RelativeLayout>

</RelativeLayout>
